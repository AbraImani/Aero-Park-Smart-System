# Variables d'environnement - AeroPark Smart System
# =================================================
# Copier ce fichier vers .env et remplir les valeurs

# Mode debug (true/false)
DEBUG=false

# Configuration Firebase
# ----------------------
# Recuperer ces valeurs depuis la console Firebase:
# Project Settings > Service Accounts > Generate New Private Key

FIREBASE_PROJECT_ID=votre-projet-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@votre-projet.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nVOTRE_CLE_PRIVEE\n-----END PRIVATE KEY-----\n"

# Chemin vers le fichier de credentials Firebase (optionnel si les variables ci-dessus sont definies)
FIREBASE_CREDENTIALS_PATH=firebase-service-account.json

# Cle API pour les capteurs ESP8266
# ---------------------------------
# Generer une cle secrete unique pour securiser les communications avec les capteurs
SENSOR_API_KEY=votre-cle-api-secrete-ici

# Origines CORS autorisees (separer par des virgules si plusieurs)
# ----------------------------------------------------------------
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:5500"]

# Tarification
# ------------
TARIF_HEURE=1000
DUREE_MAX_HEURES=168
